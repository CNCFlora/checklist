{{> header}}
    <table class="table">
        <thead>
            <tr>
                <th>Recorte</th>   
                <th>Editar</th>
                <th>Excluir</th>
            </tr>
        </thead>
        <tbody>
        {{#databases}}
            <tr>
                <td>{{doc.name}} - {{doc.description}}</td>
                <td>
                    <a href="{{base}}/edit/id/{{id}}/rev/{{doc._rev}}"><span class="glyphicon glyphicon-pencil"></span></a>
                </td>
                <td>
                    <a href="{{base}}/delete/id/{{id}}/rev/{{doc._rev}}"><span class="glyphicon glyphicon-remove"></span></a>
                </td>
            </tr>
        {{/databases}}
        </tbody>
    </table>
{{> footer}}
