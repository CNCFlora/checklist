        <table class="table">
            <thead>
                <tr>
                    <th>FAMÍLIAS</th>   
                </tr>
            </thead>
            <tbody>
            {{#families}}
                <tr>
                    <td><a href="{{base}}/edit/family/{{name}}">{{name}} / {{species_amount}}</a></td>
                </tr>
            {{/families}}
